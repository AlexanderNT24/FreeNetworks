<%- layout('layouts/main.ejs')%>

<div class="container">
    <form action="/profile" method="post">
         <div class="card">
            <input type="text" name="email" value=<%=user.email %> readonly>
            <h5 class="card-header">Crear pregunta</h5>
            <div class="input-group">
                <input class="form-control me-2"  placeholder="Titulo" name="title">
             <div class="input-group mb-3">
                 
                 <hr>
                 <textarea name="question" class="form-control" aria-label="With textarea"></textarea>
                 <button class="btn btn-outline-success" type="submit"><i class='bx bxs-send' ></i></button>
               </div>
           </div>  
          </div>
        
    </form>

  </div>
 


   
